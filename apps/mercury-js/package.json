{
  "name": "mercury-js",
  "version": "1.0.0",
  "private": true,
  "description": "Mercury e-commerce API implemented in CommonJS JavaScript",
  "main": "src/server.js",
  "engines": {
    "node": ">=20"
  },
  "directories": {
    "test": "tests"
  },
  "overrides": {
    "picomatch": "4.0.3"
